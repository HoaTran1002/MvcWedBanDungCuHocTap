@{
  Layout = "/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@model MvcWedBanDungCuHocTap.Models.TheLoai
<style>
    .my-form-class{
        width: 100%;
    }
</style>
<div class="container-fluid">
    <div class="row">
        <h2>Chỉnh sửa thể loại sản phẩm</h2>
    </div>
    <div class="row">
        
    <form class="shadow-lg p-3 mb-5 bg-white rounded" action="/Admin/TheLoai/Edit/@Model.Id" method="POST" enctype="multipart/form-data">
        <input type="hidden" name="Id" value="@Model.Id">

        <div class="form-group md-3 col-lg-6">
            <label class="text-dark" for="exampleInputTenLop">Tên mục lớp</label>
            <input name="TenTheLoai" type="text" class="form-control" id="exampleInputTenLop" aria-describedby="emailHelp" value="@Model.TenTheLoai">
        </div>
        <button type="submit" class="btn btn-primary">Lưu</button>
    </form>
    </div>
</div>