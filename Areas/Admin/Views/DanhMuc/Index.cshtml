@{
  Layout = "/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@model IEnumerable<MvcWedBanDungCuHocTap.Models.DanhMucSanPham>

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <h2>Danh mục sản phẩm</h2>

        </div>
        <div class="col-lg-6">
            <a href="/Admin/DanhMuc/Create" class="btn border-primary text-white bg-primary mt-4"><i class="bi bi-plus-circle"></i>Thêm Mới</a>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <table class="table table-image">
                <thead>
                    <tr>
                    <th scope="col">Mã Danh Mục</th>
                    <th scope="col">Tên Danh Mục </th>
                    <th scope="col">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var danhmuc in Model)
                    {
                        <tr>
                            <td>@danhmuc.Id</td>
                            <td>@danhmuc.TenDM</td>
                            <td>
                                <a href="/Admin/DanhMuc/Details/@danhmuc.Id">Xem</a> |
                                <a href="/Admin/DanhMuc/Edit/@danhmuc.Id">Sửa</a> |
                                <a href="/Admin/DanhMuc/Delete/@danhmuc.Id">Xóa</a>
                            </td>
                        </tr>
                    }
                </tbody>
                </table>   
        </div>
    </div>
</div>