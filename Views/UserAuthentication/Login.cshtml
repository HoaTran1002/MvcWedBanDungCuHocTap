@model MvcWedBanDungCuHocTap.Models.LoginModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>login</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/css/bootstrap.min.css">
    <style>
        .container {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .login-form {
          
            border: 3px solid #f1f1f1;
            width: 60%;
        }

        .login-form__image {
            flex: 0.5;
        }

        .login-form__image img {
            width: 100%;
            height: auto;
        }

        .login-form__form {
          
          
            flex: 0.5;
            padding: 16px;
            
            height: 300px;
        }

        .err {
            color: red;
        }
    </style>
</head>
<body>
    <div class="container">
       
            <div class="login-form__image">
                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.webp"
                     class="img-fluid" alt="Sample image">
            </div>
            <div class="login-form__form">
               <h3>Đăng Nhập Tài Khoản</h3>
                <form asp-action="Login" method="post">
                    <div class="mb-3" style="margin: 10px;">
                        <label for="username" class="form-label"><b>Username</b></label>
                        <input type="text"style="margin: 4px;border:0.5px solid #222; width: 100%; height: 20px"  class="form-control" id="username" name="Username" placeholder="Enter Username">
                        <div class="err" asp-validation-for="Username"></div>
                    </div>
                    <div class="mb-3 mt-3"style="margin: 10px;">
                        <label for="password" class="form-label"><b>Password</b></label>
                        <input type="password" style="margin: 4px;border:0.5px solid #222; width: 100%; height: 20px" class="form-control" id="password" name="Password" placeholder="Enter Password">
                        <div class="err" asp-validation-for="Password"></div>
                    </div>
                    @if (TempData["msg"] != null) {
                        <div class="alert alert-danger">@TempData["msg"]</div>
                    }
                    <button style="margin: 10px; background:#fff; color:blue; border:1px solid #222;boder-radius:3px; width:100px; height:40px;" type="submit" class="btn btn-primary">Đăng Nhập</button>
           
                    <a class="text-alert" href="/UserAuthentication/Registration">Đăng ký tài khoản?</a>
                </form>
            </div>
        </div>
    

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/js/bootstrap.bundle.min.js"></script>
</body>
</html>
