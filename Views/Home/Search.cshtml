@{
    ViewData["Title"] = "Search Page";
}
<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <h1>Bạn đang tìm kiếm sản phẩm: @ViewBag.keysearch </h1>
        </div>
    </div>
    <div class="row">
        @if(ViewBag.ListSp.Count== 0){
            <div class="col-lg-12">Sản phẩm bạn tìm kiếm không tồn tại</div>
        }else{
            foreach(var item in ViewBag.ListSp){
                <div class="col-lg-3 col-md-6 col-sm-12 pb-1">
                        <div class="card product-item border-0 mb-4">
                            <div class="card-header product-img position-relative overflow-hidden bg-transparent border p-0">
                                <img class="img-fluid w-100" src="~/@item.HinhAnh.HinhAnhSP" alt="hình ảnh sản phẩm">
                            </div>
                            <div class="card-body border-left border-right text-center p-0 pt-4 pb-3">
                                <h6 class="text-truncate mb-3">@item.SanPham.TenSP</h6>
                                <div class="d-flex justify-content-center">
                                    <h6>@item.SanPham.GiaBan VND</h6>
                                </div>
                            </div>
                            <div class="card-footer d-flex justify-content-between bg-light border">
                                <a href="/Home/Detail/@item.SanPham.Id" class="btn btn-sm text-dark p-0">
                                    <i class="fas fa-eye text-primary mr-1"></i>
                                    Xem chi tiết
                                </a>
                                <a href="" class="btn btn-sm text-dark p-0"><i
                                        class="fas fa-shopping-cart text-primary mr-1"></i>
                                        Thêm vào giỏ hàng
                                </a>
                            </div>
                        </div>
                    </div>
            }
        }
    </div>
</div>